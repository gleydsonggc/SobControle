<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.activities.CadastroActivity">

        <EditText
            android:id="@+id/activity_cadastro_et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:text="usuario1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/activity_cadastro_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="E-mail"
            android:text="usuario1@pdm20221.com"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/activity_cadastro_et_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/activity_cadastro_bt_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="cadastrar"
            android:text="Cadastrar" />

    </LinearLayout>

</ScrollView>